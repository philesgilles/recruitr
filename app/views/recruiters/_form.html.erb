<div class="row">
  <div class="col-12">
    <%= form_for @recruiter do |f|%>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :telephone %>
        <%= f.telephone_field :telephone, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :linked_in %>
        <%= f.text_field :linked_in, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-secondary" %>
      </div>
    <% end %>
    <div class="col-12 text-center">
      <%= link_to 'Cancel and return to positions', positions_path %>
    </div>
  </div>
</div>
